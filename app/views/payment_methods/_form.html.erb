<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @address, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :street_one, class:"control-label" %>
          <%= f.text_field :street_one, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :street_two, class: "control-label" %>
          <%= f.text_field :street_two, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :street_two, class: "control-label" %>
          <%= f.text_field :street_two, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :city, class: "control-label" %>
          <%= f.text_field :city, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :state, class: "control-label" %>
          <%= f.text_field :state, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :postal_code, class: "control-label" %>
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
