<div class="modal-header">
<h3>New Payment Method</h3>
</div>

<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for [@parent, @payment_method], remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :card_number, class:"control-label" %>
          <%= f.text_field :card_number, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :expiration, class: "control-label" %>
          <%= f.text_field :expiration, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :cvc, class: "control-label" %>
          <%= f.text_field :cvc, class: "form-control" %>
        </div>
          <%= f.hidden_field :service_agreement_id, value: params[:service_agreement_id] %>
          <%= f.hidden_field :account_id, value: params[:account_id] %>
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
