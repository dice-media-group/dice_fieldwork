<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for [@parent, @arrangement], remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :initial_charge_amount, class:"control-label" %>
          <%= f.text_field :initial_charge_amount, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :recurring_charge_amount, class:"control-label" %>
          <%= f.text_field :recurring_charge_amount, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.select(:payment_method_description, options_for_select([
                      ['Check', 'Check'], 
                      ['Credit Card', 'Credit Card'], 
                      ['Cash', 'Cash']
                ], :selected => params[:payment_method_description]), :include_blank => 'Payment Method', class: "form-control") %>
          
        </div>

        <div class="form-group">
          <%= f.label :customer_initials, class:"control-label" %>
          <% if @arrangement.customer_initials %>
          <p>already signed</p>
          <% else %>
            
          <div class="row">
              <div class="sigPad">
                  <ul class="sigNav">
                    <li class="clearButton"><a href="#clear">Clear</a></li>
                  </ul>
                  <div class="sig sigWrapper">
                    <div class="typed"></div>
                    <canvas class="pad" width="198" height="55"></canvas>
                    <%= f.hidden_field :customer_initials, class: "output"  %>

                  </div>
              </div>
          </div>
          <% end %>
          <%#= f.text_field :customer_initials, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.select(:payment_frequency, options_for_select([
                      ['Monthly', 'Monthly'], 
                      ['Bi-Monthly', 'Bi-Monthly'], 
                      ['Quarterly', 'Quarterly'], 
                      ['Pay in Full', 'Pay in Full']
                ], :selected => params[:payment_frequency]), :include_blank => 'Payment Frequency') %>
        </div>

        <div class="form-group">
          <%= f.label :start_date, class:"control-label" %>
          <%= f.date_select :start_date, {order: [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: Date.today.year + 5}, {required: true} %>
        </div>
        
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
        <%= render :partial => 'service_agreements/signaturepad_scripts' %>
        
