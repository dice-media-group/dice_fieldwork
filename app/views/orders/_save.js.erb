$("ul.errors").html("")
<% if @order.errors.any? %>
  <% @order.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#additional_order_items").html("<%= escape_javascript(render 'orders/ajax_order') %>")
  $("#order-modal").modal("hide")
<% end %>
